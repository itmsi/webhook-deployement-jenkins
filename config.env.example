# Contoh konfigurasi untuk berbagai project

# Sistem A - Node.js Express
SISTEM_A_PATH=/var/www/html/sistem-a
SISTEM_A_COMMANDS=git pull origin develop;npm install;npm run build;pm2 restart sistem-a

# Sistem B - React.js
SISTEM_B_PATH=/var/www/html/sistem-b
SISTEM_B_COMMANDS=git pull origin main;npm install;npm run build;pm2 restart sistem-b

# Sistem C - Laravel
SISTEM_C_PATH=/var/www/html/sistem-c
SISTEM_C_COMMANDS=git pull origin master;composer install;php artisan cache:clear;php artisan config:cache;php artisan route:cache;php artisan view:cache

# Sistem D - Vue.js
SISTEM_D_PATH=/var/www/html/sistem-d
SISTEM_D_COMMANDS=git pull origin develop;npm install;npm run build:production;pm2 restart sistem-d

# Sistem E - Next.js
SISTEM_E_PATH=/var/www/html/sistem-e
SISTEM_E_COMMANDS=git pull origin main;npm install;npm run build;pm2 restart sistem-e

# Sistem F - Django
SISTEM_F_PATH=/var/www/html/sistem-f
SISTEM_F_COMMANDS=git pull origin main;pip install -r requirements.txt;python manage.py collectstatic --noinput;python manage.py migrate;sudo systemctl restart sistem-f

# Sistem G - Flask
SISTEM_G_PATH=/var/www/html/sistem-g
SISTEM_G_COMMANDS=git pull origin develop;pip install -r requirements.txt;sudo systemctl restart sistem-g

# Sistem H - Angular
SISTEM_H_PATH=/var/www/html/sistem-h
SISTEM_H_COMMANDS=git pull origin main;npm install;ng build --prod;pm2 restart sistem-h

# Sistem I - Nuxt.js
SISTEM_I_PATH=/var/www/html/sistem-i
SISTEM_I_COMMANDS=git pull origin develop;npm install;npm run build;pm2 restart sistem-i

# Sistem J - Spring Boot
SISTEM_J_PATH=/var/www/html/sistem-j
SISTEM_J_COMMANDS=git pull origin main;./mvnw clean package -DskipTests;sudo systemctl restart sistem-j

# Sistem K - WordPress
SISTEM_K_PATH=/var/www/html/sistem-k
SISTEM_K_COMMANDS=git pull origin main;composer install --no-dev --optimize-autoloader;wp cache flush

# Sistem L - Symfony
SISTEM_L_PATH=/var/www/html/sistem-l
SISTEM_L_COMMANDS=git pull origin main;composer install --no-dev --optimize-autoloader;php bin/console cache:clear --env=prod;php bin/console doctrine:migrations:migrate --no-interaction

# Sistem M - CodeIgniter
SISTEM_M_PATH=/var/www/html/sistem-m
SISTEM_M_COMMANDS=git pull origin main;composer install --no-dev --optimize-autoloader;php index.php migrate

# Sistem N - Ruby on Rails
SISTEM_N_PATH=/var/www/html/sistem-n
SISTEM_N_COMMANDS=git pull origin main;bundle install;bundle exec rails assets:precompile;bundle exec rails db:migrate;sudo systemctl restart sistem-n

# Sistem O - ASP.NET Core
SISTEM_O_PATH=/var/www/html/sistem-o
SISTEM_O_COMMANDS=git pull origin main;dotnet restore;dotnet build --configuration Release;dotnet publish --configuration Release;sudo systemctl restart sistem-o
